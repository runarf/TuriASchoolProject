<% content_for :page_title do %>
    "Discussions"
<% end %>

<div class="block overflow-hidden">
  <!-- Message List -->
  <div id="message-list">
    <!-- Title -->
    <div class="block-title clearfix">
      <div class="block-options pull-right">
        <a class="btn btn-effect-ripple btn-default" href="javascript:void(0)" style="overflow: hidden; position: relative;"><i class="fa fa-arrow-left"></i>
          Prev</a>
        <a class="btn btn-effect-ripple btn-default" href="javascript:void(0)" style="overflow: hidden; position: relative;">Next
          <i class="fa fa-arrow-right"></i></a>
      </div>
    </div>
    <!-- END Title -->

    <!-- Messages -->
    <div class="block-content-full">
      <table class="table table-borderless table-striped table-vcenter remove-margin">
        <%= render @discussions %>
      </table>
    </div>
    <!-- END Messages -->
  </div>
  <!-- END Message List -->
</div>