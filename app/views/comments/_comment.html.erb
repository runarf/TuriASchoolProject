<% @comments.each do |comment| %>

<p><%= "Comment ##{number += 1}" %></p>
<p>
<%= comment.body %>
  <%= link_to raw('<i class="fa fa-pencil"></i>'),
              edit_trip_discussion_comment_path(@trip, @discussion, comment),
              title: "Edit comment",
              id: 'edit-comment-btn'
  %>

  <%= link_to raw('<i class="fa fa-trash"></i>'),
              trip_discussion_comment_path(@trip, @discussion, comment),
              method: :delete,
              data: {
                      confirm: "Are you sure you want to delete this comment?", toggle: 'tooltip'},
              title: "Delete comment",
              id: 'destroy-comment-btn'
  %>
</p>
<% end %>